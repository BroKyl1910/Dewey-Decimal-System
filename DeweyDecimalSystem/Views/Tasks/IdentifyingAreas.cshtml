
@{
    ViewData["Title"] = "Identifying Areas";
}

<div class="back-button-wrapper">
    <a href="/Home/Index" class="back-button"><i class="fa fa-chevron-left"></i> Back to Menu</a>
</div>
<div class="container identifying-areas-container">
    <div class="header-wrapper">
        <div class="header-left">
            <h2>Identifying Areas</h2>
            <span class="instructions"></span>
        </div>
        <div class="header-right">
            <div class="timer-wrapper">
                <span class="timer-text">0s</span>
                <i class="fa fa-play play-button"></i>
            </div>
            <div class="endgame-controls-wrapper">
                <div class="endgame-control next"><i class="fas fa-play control-icon"></i></div>
                <div class="endgame-control leaderboard"><i class="fas fa-award control-icon"></i></div>
            </div>
        </div>
    </div>
    <hr />

    <div class="column-wrapper">
        <div class="left-column">
            
        </div>
        <div class="right-column" id="origin">
           
        </div>
    </div>

    <div class="progress-bar-wrapper">
        <div class="custom-progress-bar"></div>
    </div>
</div>

<div class="popup-container">
    <div class="form-wrapper">
        <h2>Enter Name</h2>
        <hr>
        <div class="form-body">
            <input class="form-input form-component" type="text" id="name-text" placeholder="Enter your name" />
            <div class="error-wrapper">
                <span class="error-text"></span>
            </div>
            <div class="button-wrapper">
                <button class="save-score-button form-component">Continue</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/identifying-areas.js"></script>

